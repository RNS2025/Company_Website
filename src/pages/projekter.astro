---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/project/ProjectCard.astro';
import Section from '../components/ui/Section.astro';
import FadeIn from '../components/animations/FadeIn.astro';
import VideoBackground from '../components/ui/VideoBackground.astro';
import { projects } from '../data/projects';
---

<Layout title="Projekter - RNS APPS">
	<!-- Hero Section with Video Background -->
	<section class="relative min-h-[50vh] flex items-center justify-center overflow-hidden">
		<VideoBackground
			src="/videos/tech-background.mp4"
			overlay="medium"
		/>

		<div class="relative z-10 container mx-auto px-4 text-center">
			<FadeIn>
				<h1 class="text-5xl md:text-7xl font-bold mb-6">
					Vores <span class="bg-gradient-to-r from-primary-500 via-primary-600 to-primary-700 text-transparent bg-clip-text">Arbejde</span>
				</h1>
				<p class="text-xl md:text-2xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
					Vi er stolte af det arbejde, vi leverer, og hvordan det løser reelle problemer for vores klienter.
					Se nogle af vores seneste projekter nedenfor.
				</p>
			</FadeIn>
		</div>
	</section>

	<!-- Projects Grid -->
	<Section>
		<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
			{projects.map((project, index) => (
				<FadeIn delay={index * 0.1}>
					<ProjectCard
						title={project.title}
						description={project.tagline}
						image={project.thumbnail}
						tags={project.tags}
						link={`/projekter/${project.slug}`}
						featured={index < 2}
					/>
				</FadeIn>
			))}
		</div>

		{/* Empty state if no projects */}
		{projects.length === 0 && (
			<FadeIn>
				<div class="text-center py-20">
					<p class="text-2xl text-gray-400">
						Flere projekter kommer snart...
					</p>
				</div>
			</FadeIn>
		)}
	</Section>

	<!-- CTA Section -->
	<Section class="relative overflow-hidden">
		<div class="absolute inset-0 bg-gradient-to-br from-primary-500/10 via-primary-600/10 to-primary-700/10 rounded-3xl"></div>

		<FadeIn>
			<div class="relative text-center py-16">
				<h2 class="text-4xl md:text-5xl font-bold mb-4">
					Lad Os Skabe Dit Næste Projekt
				</h2>
				<p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
					Har du en idé, du vil realisere? Vi er klar til at hjælpe dig med at bringe den til live.
				</p>
				<a
					href="/kontakt/"
					class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-primary-500 to-primary-600 rounded-full text-white font-semibold hover:scale-105 transition-transform duration-300"
				>
					Start Dit Projekt
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
					</svg>
				</a>
			</div>
		</FadeIn>
	</Section>
</Layout>
