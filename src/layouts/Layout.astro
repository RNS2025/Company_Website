---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '@fontsource/saira';

interface Props {
    title: string;
    description?: string;
}

const { 
    title,
    description = 'Vi bygger skr√¶ddersyet applikationer til alle behov.'
} = Astro.props;
---

<!doctype html>
<html lang="da" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/logo_small.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title} | RNS APPS</title>
    </head>
    <body class="bg-[#2A2A2A] text-[#EAE9E9]">
        <Header />
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>

<style is:global>
    :root {
        color-scheme: dark;
    }
    body {
        font-family: 'Saira', system-ui, -apple-system, BlinkMacSystemFont,
        'Segoe UI', sans-serif;
    }
</style>
