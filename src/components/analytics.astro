---
// Google Analytics 4 Component
// Uses Partytown to run analytics in a web worker for better performance
const GA_MEASUREMENT_ID = "G-VCS7XK06WY";
---

<!-- Google Analytics 4 with Partytown -->
<script type="text/partytown" src={`https://www.googletagmanager.com/gtag/js?id=${GA_MEASUREMENT_ID}`}></script>
<script type="text/partytown" define:vars={{ GA_MEASUREMENT_ID }}>
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    dataLayer.push(arguments);
  }
  gtag("js", new Date());
  gtag("config", GA_MEASUREMENT_ID);
</script>
