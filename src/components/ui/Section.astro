---
interface Props {
    class?: string;
    container?: boolean;
}

const {
    class: className = '',
    container = true
} = Astro.props;

const containerClass = container ? 'container mx-auto px-6' : '';
---

<section class={`py-20 ${className}`}>
    <div class={containerClass}>
        <slot />
    </div>
</section>
