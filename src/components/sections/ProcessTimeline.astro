---
import SlideIn from "../animations/SlideIn.astro";
import Icon from "../ui/Icon.astro";
import Section from "../ui/Section.astro";

interface Step {
  number: string;
  icon: string;
  title: string;
  description: string;
  deliverables: string[];
}

const steps: Step[] = [
  {
    number: "01",
    icon: "lightbulb",
    title: "Idé & Planlægning",
    description:
      "Vi starter med at lytte. Vi kortlægger dine ønsker og lægger en klar plan for projektet.",
    deliverables: ["Klar handlingsplan", "Visuelle skitser", "Tidsplan"],
  },
  {
    number: "02",
    icon: "pencil",
    title: "Design",
    description:
      "Vi tegner løsningen, så den er flot at se på og nem at bruge for dine kunder.",
    deliverables: ["Brugervenligt design", "Visuel identitet", "Klikbar model"],
  },
  {
    number: "03",
    icon: "code",
    title: "Opbygning",
    description:
      "Vi bygger systemet teknisk, så det er hurtigt, sikkert og fremtidssikret.",
    deliverables: ["Solid teknik", "Høj sikkerhed", "Jævnlige statusmøder"],
  },
  {
    number: "04",
    icon: "test-tube",
    title: "Kvalitetstjek",
    description:
      "Vi tester alt grundigt igennem for at sikre, at der ikke er fejl, og at hastigheden er i top.",
    deliverables: ["Fejlretning", "Hastighedsoptimering", "Sikkerhedstjek"],
  },
  {
    number: "05",
    icon: "rocket",
    title: "Lancering",
    description:
      "Vi går i luften! Vi sørger for, at din løsning kommer sikkert ud til verden.",
    deliverables: ["Vi går live", "Opsætning af drift", "Guide til brug"],
  },
  {
    number: "06",
    icon: "trending-up",
    title: "Samarbejde",
    description:
      "Vi slipper dig ikke her. Vi hjælper med opdateringer og sikrer, at løsningen vokser med dig.",
    deliverables: [
      "Indsigt i besøgstal",
      "Nye funktioner",
      "Personlig support",
    ],
  },
];
---

<Section>
  <div class="text-center mb-16">
    <SlideIn direction="up">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        Vores <span
          class="bg-gradient-to-r from-primary-500 to-primary-600 text-transparent bg-clip-text"
          >Proces</span
        >
      </h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Fra første tanke til færdigt resultat – vi holder dig i hånden hele
        vejen
      </p>
    </SlideIn>
  </div>

  <div class="relative">
    <div
      class="hidden lg:block absolute left-1/2 transform -translate-x-1/2 w-0.5 h-full bg-gradient-to-b from-primary-500 via-primary-600 to-primary-700 opacity-20"
    >
    </div>

    <div class="space-y-12">
      {
        steps.map((step, index) => (
          <SlideIn
            direction={index % 2 === 0 ? "left" : "right"}
            delay={index * 0.1}
          >
            <div
              class={`flex flex-col lg:flex-row items-center gap-8 ${index % 2 === 0 ? "" : "lg:flex-row-reverse"}`}
            >
              <div class="flex-1 lg:text-left">
                <div
                  class={`bg-black bg-opacity-5 backdrop-blur-md shadow-lg shadow-orange-500/30 rounded-2xl p-8 border border-dark-border hover:border-primary-500/50 transition-all duration-300 ${index % 2 === 0 ? "lg:mr-8" : "lg:ml-8"}`}
                >
                  <div class="flex items-center gap-4 mb-4">
                    <span class="text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-primary-500 to-primary-600">
                      {step.number}
                    </span>
                    <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-lg flex items-center justify-center">
                      <Icon name={step.icon} class="w-6 h-6 text-white" />
                    </div>
                  </div>

                  <h3 class="text-2xl font-bold mb-3">{step.title}</h3>
                  <p class="text-gray-300 mb-4">{step.description}</p>

                  <div class="flex flex-wrap gap-2">
                    {step.deliverables.map((deliverable) => (
                      <span class="px-3 py-1 bg-dark-border/50 rounded-full text-sm text-gray-300">
                        {deliverable}
                      </span>
                    ))}
                  </div>
                </div>
              </div>

              <div class="hidden lg:block w-4 h-4 bg-gradient-to-r from-primary-500 to-primary-600 rounded-full border-4 border-dark z-10" />

              <div class="hidden lg:block flex-1" />
            </div>
          </SlideIn>
        ))
      }
    </div>
  </div>
</Section>
