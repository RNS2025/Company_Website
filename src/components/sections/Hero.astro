---
import Button from '../ui/Button.astro';
import GradientText from '../ui/GradientText.astro';
import { Code2, Smartphone, Database, Layers, Eye, MessageCircle, ChevronDown } from 'lucide-astro';
---

<section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden">
    <!-- Background gradient -->
    <div class="absolute inset-0 bg-gradient-to-br from-dark via-dark to-dark-lighter -z-10"></div>

    <!-- Floating tech icons (subtle background) -->
    <div class="absolute inset-0 -z-10 opacity-10">
        <div class="absolute top-20 left-10 animate-float">
            <Code2 size={60} />
        </div>
        <div class="absolute top-40 right-20 animate-float" style="animation-delay: 0.5s;">
            <Smartphone size={50} />
        </div>
        <div class="absolute bottom-40 left-1/4 animate-float" style="animation-delay: 1s;">
            <Database size={55} />
        </div>
        <div class="absolute bottom-20 right-1/3 animate-float" style="animation-delay: 1.5s;">
            <Layers size={45} />
        </div>
    </div>

    <div class="container mx-auto px-6 text-center">
        <div class="max-w-4xl mx-auto">
            <!-- Hero heading with staggered animation -->
            <h1 class="text-5xl md:text-7xl font-black mb-6 tracking-tighter leading-tight">
                Vi Bygger
                <GradientText as="span" class="block mt-2">
                    Software Der Gør
                </GradientText>
                <span class="block mt-2">en Forskel</span>
            </h1>

            <!-- Subheading -->
            <p class="text-xl md:text-2xl text-slate-300 mb-12 max-w-2xl mx-auto">
                Skræddersyede webløsninger, mobile apps og systemer bygget med moderne teknologier og ren kode.
            </p>

            <!-- CTAs -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <Button variant="primary" size="lg" href="/projekter/">
                    <Eye size={20} class="mr-2" />
                    Se Vores Arbejde
                </Button>
                <Button variant="outline" size="lg" href="/kontakt/">
                    <MessageCircle size={20} class="mr-2" />
                    Start Et Projekt
                </Button>
            </div>

            <!-- Scroll indicator -->
            <div class="mt-20 animate-bounce">
                <ChevronDown size={32} class="mx-auto text-primary-500" />
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes stagger-fade {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    h1 > * {
        animation: stagger-fade 0.8s ease-out forwards;
    }

    h1 > *:nth-child(1) {
        animation-delay: 0.1s;
    }

    h1 > *:nth-child(2) {
        animation-delay: 0.3s;
    }

    h1 > *:nth-child(3) {
        animation-delay: 0.5s;
    }
</style>
